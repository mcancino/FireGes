@model IEnumerable<FireGes.Models.Compania>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DenominacionCompania)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreFantasia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCuerpoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DenominacionCompania)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreFantasia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCuerpoNavigation.Denominacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCompania">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCompania">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCompania">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
